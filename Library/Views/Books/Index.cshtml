@using System.Collections.Generic;

@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Book>;

<h1>Books</h1>

@if (@Model.Count == 0)
{
  <h4>No Books have been added</h4>
}

@foreach(Book book in Model)
{
  <ul>
  <li>@Html.ActionLink($"Title: {book.Title}", "Details", new { id = book.BookId })</li>
  @foreach (AuthorBook authorBook in book.AuthorBooks) 
  {
    <li>Author: @authorBook.Author.Name</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add book", "Create")</p>
